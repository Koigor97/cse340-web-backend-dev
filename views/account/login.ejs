<div class="container">
  <div class="login-content">
    <div class="text-center">
      <h1>Login now!</h1>
      <p></p>
    </div>
    <div class="card">
      <form class="card-body" action="/account/login" method="post">
        <div class="form-control">
          <label class="label">
            <span class="label-text">Email</span>
          </label>
          <input
            type="email"
            name="account_email"
            placeholder="email"
            required
          />
        </div>
        <div class="form-control">
          <label class="label">
            <span class="label-text">Password</span>
          </label>
          <input
            type="password"
            name="account_password"
            placeholder="password"
            required
            pattern='pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$'
          />
          <label class="label">
            <a href="#" class="label-text-alt">Forgot password?</a>
          </label>
        </div>
        <div class="form-control mt-6">
          <button type="submit" class="btn">Login</button>
        </div>
      </form>
      <div>
        <p>
          Please make sure the password is at least 12 characters and has at
          least 1 uppercase character, 1 number and 1 special character.
        </p>
      </div>
      <div class="signup-link">
        No account?
        <a href="/account/register">Sign up</a>
      </div>
    </div>
  </div>
</div>
